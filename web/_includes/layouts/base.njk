<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#6b8367">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,600;1,400&family=Source+Sans+Pro:wght@300;600&display=swap" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="{{ '/' | url }}dist/css/style.css" media="all" />
  </head>
  <body>
    <a href="#main-content" class="visually-hidden focusable skip-link">Skip to main content</a>
    <div class="page-container">
      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        <a id="main-content" tabindex="-1" class="remove-underline"></a>
        {{ content | safe }}
      </main>
      <footer class="footer" role="contentinfo">
        <div class="container">
          <p>Copyright Â© 1996-2020 Jeremy Caldwell</p>
        </div>
      </footer>
      <div class="banner">
        <p><a href="#" class="remove-underline">Hire me</a></p>
      </div>
    </div>
  </body>
</html>
